{
  "name": "devanalytics",
  "displayName": "DevAnalytics",
  "description": "Privacy-friendly local analytics for VS Code. Offline only.",
  "version": "0.4.0",
  "publisher": "RaulAlazovi069",
  "engines": { "vscode": "^1.105.0" },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:devanalytics.openDashboard",
    "onCommand:devanalytics.exportData",
    "onCommand:devanalytics.exportCsv",
    "onCommand:devanalytics.resetAnalytics",
    "onCommand:devanalytics.toggleStatusBar",
    "onCommand:devanalytics.toggleFocusMode",
    "onCommand:devanalytics.showSummary"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "devanalytics.openDashboard", "title": "DevAnalytics: Open Dashboard" },
      { "command": "devanalytics.exportData", "title": "DevAnalytics: Export JSON" },
      { "command": "devanalytics.exportCsv", "title": "DevAnalytics: Export CSV" },
      { "command": "devanalytics.resetAnalytics", "title": "DevAnalytics: Reset Analytics" },
      { "command": "devanalytics.toggleStatusBar", "title": "DevAnalytics: Toggle Status Bar" },
      { "command": "devanalytics.toggleFocusMode", "title": "DevAnalytics: Toggle Focus Mode" },
      { "command": "devanalytics.showSummary", "title": "DevAnalytics: Show Summary" }
    ],
    "configuration": {
      "type": "object",
      "title": "DevAnalytics",
      "properties": {
        "devanalytics.idleSeconds": { "type": "number", "default": 300 },
        "devanalytics.keepDays": { "type": "number", "default": 30 },
        "devanalytics.statusBarEnabled": { "type": "boolean", "default": true },
        "devanalytics.dailyGoalMinutes": { "type": "number", "default": 120 }
      }
    }
  },
  "scripts": {
    "build:web": "cd webview-ui && npm ci && npm run build",
    "vscode:prepublish": "npm run build:web && tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/vscode": "^1.105.0",
    "typescript": "^5.6.3"
  }
}
